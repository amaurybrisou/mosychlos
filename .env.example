# Environment Configuration Example
# Copy this file to .env and fill in your actual API keys

# OpenAI Configuration (Required for AI analysis)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Financial Data API Keys (Optional but recommended)
FINNHUB_API_KEY=your_finnhub_api_key_here
FMP_API_KEY=your_fmp_api_key_here
SEC_API_KEY=your_sec_api_key_here

# Social Media APIs (Optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Server Configuration
PORT=8080

# API Key Sources:
# OpenAI: https://platform.openai.com/api-keys
# Finnhub: https://finnhub.io/
# FMP: https://financialmodelingprep.com/developer/docs
# SEC API: https://sec-api.io/

# Cache configuration (optional)
export FINROBOT_CACHE_DIR="finrobot_cache"
export FINROBOT_CACHE_TTL="3600"            # 1 hour default